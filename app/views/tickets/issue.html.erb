<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        color: #333; /* Standard text color for better readability */
    }

    form {
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        width: 90%;
        max-width: 600px; /* Slightly wider form */
        box-sizing: border-box;
    }

    h1 {
        font-size: 28px; /* Larger font size for heading */
        color: #333;
        margin-bottom: 20px; /* More space under the heading */
    }

    textarea {
        width: 100%;
        padding: 15px;
        border: 2px solid #ccc; /* Slightly thicker border */
        border-radius: 6px; /* Rounded corners */
        box-sizing: border-box;
        margin-bottom: 20px; /* Increased space between textarea and button */
        font-size: 16px; /* Larger font for easier reading */
        height: 150px; /* Larger fixed height */
    }

    input[type="submit"] {
        background-color: #007BFF; /* Modern blue */
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        float: right; /* Positioning to the right */
        font-weight: bold; /* Bold font for the button */
        font-size: 16px; /* Larger button text */
        transition: background-color 0.3s; /* Smooth transition for hover effect */
    }

    input[type="submit"]:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }
</style>


    <%= form_tag(tickets_issue_solved_url, method: :post) do %>
        <%= hidden_field_tag :ticket_id, @ticket_id %>
        <%= hidden_field_tag :agent_id, @agent_id %>
        <%= hidden_field_tag :assignee_name, @assignee_name %>        
        <h1>Remarks/Comment</h1>
        <%= text_area_tag :remarks, nil, placeholder: "Enter your comments here...", size: "60x12" %>
        <%= submit_tag 'Solved' %>
    <% end %>