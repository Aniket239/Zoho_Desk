<style>
.tickets {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    max-width: 800px;
    margin: auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.tickets h1 {
    color: #333;
    text-align: center;
    margin-bottom: 20px;
}

.ticket {
    background-color: #ffffff;
    border: 1px solid #eaeaea;
    border-radius: 5px;
    margin-bottom: 15px;
    padding: 15px;
    transition: box-shadow 0.3s;

}

.ticket:hover {
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
}

.ticket p {
    margin: 5px 0;
    color: #333;
}

.ticket .info {
    background-color: #f5f5f5;
    padding: 10px;
    border-radius: 4px;
    display: flex;
    flex-direction: row;
}

.ticket .info p {
    font-size: 0.9rem;

}

.info {
    background-color: #eef2f7;
    border-left: 5px solid #2a5298;
    padding: 10px;
    margin-top: 10px;
}

.info p {
    margin: 4px 0;
}

.tickets a{
    text-decoration: none;
}


</style>

<div class="tickets">
<h1>Tickets</h1>
<% if @tickets.present? && @tickets["data"].present? %>
    <% @tickets["data"].each do |ticket| %>
    <%= link_to tickets_threads_path(ticket) do %>
    <div class="ticket">
      <p><%= ticket["subject"] %></p>
        <div class="info">
            <p>#<%= ticket["ticketNumber"] %></p>&nbsp;<p>--</p>&nbsp;
            <p><%= ticket["email"] %></p>&nbsp;<p>--</p>&nbsp;
            <p>Channel: <%= ticket["channel"] %></p>&nbsp;<p>--</p>&nbsp;
            <p>Status: <%= ticket["status"] %></p>&nbsp;
        </div>
      </div>
    <% end %>
    <% end %>
<% else %>
  <p>No tickets found.</p>
<% end %>
</div>